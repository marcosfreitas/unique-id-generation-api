{
  "name": "unique-id-generation-example",
  "author": "Marcos Freitas <marcosvsfreitas+github-unique-id-generation-repo@gmail.com>",
  "version": "1.0.0",
  "description": "A simple package as example of Alpha-numeric Unique ID generation",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.js",
  "repository": "https://github.com/marcosfreitas/unique-id-generation-example",
  "license": "GPLv3",
  "keywords": [
    "node",
    "unique-id"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "format": "prettier --write \"{src,test}/**/*.{ts, tsx, json}\"",
    "lint": "eslint \"{src,test}/**/*.{ts, tsx, json}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express-validator": "^6.14.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.0.5"
  },
  "peerDependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "concurrently": "^7.5.0",
    "crypto-js": "^4.1.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "ts-jest": "28.0.5",
    "tsc-alias": "^1.7.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@components/(.*)$": "<rootDir>/src/components/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  },
  "engines": {
    "node": ">=16"
  }
}
